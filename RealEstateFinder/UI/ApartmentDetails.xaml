<UserControl x:Class="RealEstateFinder.UI.ApartmentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealEstateFinder.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <DockPanel>
            <Button Name="btnRefresh" Width="80" DockPanel.Dock="Right">Refresh</Button>
            <Button Name="btnOpenMap" Width="80" DockPanel.Dock="Right" Margin="0,0,16,0">Open map</Button>
            <Button Name="btnOpenSite" Width="80" DockPanel.Dock="Right" Margin="0,0,16,0">Open site</Button>
            <Button Name="btnFavorite" Width="40" DockPanel.Dock="Right" Margin="0,0,16,0" FontSize="24">★</Button>
            <StackPanel Orientation="Vertical">
                <TextBlock Name="tbName"></TextBlock>
                <TextBlock Name="tbAddress"></TextBlock>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
