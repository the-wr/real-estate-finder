<Window x:Class="RealEstateFinder.UI.RegionFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateFinder.UI"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="RegionFilterDialog" Height="600" Width="400">
    <DockPanel Margin="16">
        <DockPanel LastChildFill="False" Margin="0,16,0,0" DockPanel.Dock="Bottom">
            <Button Name="btnCancel" IsCancel="True" Width="80" DockPanel.Dock="Right">Cancel</Button>
            <Button Name="btnOk" IsDefault="True" Width="80" DockPanel.Dock="Right" Margin="0,0,16,0">OK</Button>
        </DockPanel>
        <ListView Name="lvItems"></ListView>
    </DockPanel>
</Window>
