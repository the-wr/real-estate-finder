<Window x:Class="RealEstateFinder.UI.NewRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateFinder"
        mc:Ignorable="d"
        Title="New request" Height="300" Width="300" SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="0,0,0,8">Name</TextBlock>
            <TextBox Name="tbName"></TextBox>
            <TextBlock Margin="0,16,0,8">Search URL</TextBlock>
            <TextBox Name="tbRequest" MinLines="4" TextWrapping="Wrap"></TextBox>
            <DockPanel LastChildFill="False" Margin="0,16,0,0">
                <Button Name="btnCancel" IsCancel="True" Width="80" DockPanel.Dock="Right">Cancel</Button>
                <Button Name="btnOk" IsDefault="True" Width="80" DockPanel.Dock="Right" Margin="0,0,16,0">OK</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
